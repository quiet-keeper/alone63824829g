    <script>
        const correctKey = "Ферми";

        function checkKey() {
            const userInput = prompt("Чтобы разблокировать следующую координату, введи слово-ключ, которое ты извлёк из исходного сигнала:");
            if (userInput && userInput.trim().toLowerCase() === correctKey.toLowerCase()) {
                document.getElementById('nextStep').style.display = 'block';
                alert("Доступ подтверждён. Координата разблокирована.");
            } else {
                alert("Ключ не распознан. Вернись к исходному артефакту и проверь его внимательнее.");
            }
        }
        setTimeout(checkKey, 3000);
    </script>

